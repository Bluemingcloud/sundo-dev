<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_border"> <!-- 다이얼로그 모서리 둥글게 -->

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Model 지정 탭 -->
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="코드명"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="가산 해상풍력단지 1"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="모델 지정"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinner_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border" /> <!-- 둥근 테두리 -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/fan"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_border"
                        android:layout_marginTop="10dp"/> <!-- 둥근 테두리 -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="방향 각도"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/edit_angle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:background="@drawable/rounded_border" /> <!-- 둥근 테두리 -->

                </LinearLayout>

                <!-- 좌표 지정 탭 -->
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 기존 위도, 경도 입력 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위도"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/edit_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="127.3948209384"
                        android:background="@drawable/rounded_border" /> <!-- 둥근 테두리 -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="경도"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/edit_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="58.32094781980237"
                        android:background="@drawable/rounded_border" /> <!-- 둥근 테두리 -->

                    <!-- 도분초 및 방향 입력 추가 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="도분초 및 방향 입력"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 도 (Degrees) 입력 -->
                        <EditText
                            android:id="@+id/degrees"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Degrees"/>

                        <!-- 분 (Minutes) 입력 -->
                        <EditText
                            android:id="@+id/minutes"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Minutes"/>

                        <!-- 초 (Seconds) 입력 -->
                        <EditText
                            android:id="@+id/seconds"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Seconds"/>

                        <!-- 방향 (Direction) 입력 -->
                        <EditText
                            android:id="@+id/direction"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Direction"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="지정하기"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="삭제하기"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
